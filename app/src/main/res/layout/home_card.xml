<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
    android:layout_marginHorizontal="7dp"
    android:layout_marginTop="3dp"
    android:background="#08628C"
    android:layout_height="wrap_content">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5"
  android:padding="6dp"
    >

    <TextView
        android:id="@+id/home_card_sl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#FFF"

        android:layout_weight="0.5"
        >
    </TextView>

    <TextView
        android:id="@+id/home_card_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Bikram Shaw"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#FFF"
        android:layout_weight="1.8"
        >
    </TextView>
    <TextView
        android:id="@+id/home_card_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="10"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#FFF"
        android:layout_weight="0.7"
        >
    </TextView>

    <TextView
        android:id="@+id/home_card_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="12587.00"
        android:gravity="center"
        android:textSize="14dp"
        android:textColor="#FFF"
        android:layout_weight="1"
        >
    </TextView>
    <TextView
        android:id="@+id/home_card_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="125"
        android:textSize="14dp"
        android:textColor="#FFF"
        android:gravity="center"
        android:layout_weight="1"
        >

    </TextView>

</LinearLayout>



</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"


    tools:context=".activities.Register">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/registerToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#0356fc"
        app:title="Register"
        app:titleTextColor="#FFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        android:weightSum="4"
        android:layout_marginBottom="2dp"
        >

        <LinearLayout
            android:id="@+id/start_date_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="2dp"
            android:background="#00277C"
            android:layout_marginRight="1dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                ></TextView>
            <TextView
                android:id="@+id/reg_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/02/2021"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#fff"
                ></TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/end_date_layout"
            android:orientation="vertical"
            android:background="#00277C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:padding="2dp"
            android:layout_marginLeft="1dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="End"
                android:textSize="12dp"
                android:gravity="center"
                android:textColor="#fff"
                android:layout_marginBottom="2dp"
                android:layout_marginHorizontal="10dp"
                ></TextView>
            <TextView
                android:id="@+id/reg_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="10/02/2021"
                android:textStyle="bold"
                android:gravity="center"
                android:textColor="#fff"
                ></TextView>
        </LinearLayout>
        <ImageButton
            android:id="@+id/reg_search_btn"
            android:layout_marginLeft="2dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/ic_search"
            android:background="#00277C"
            ></ImageButton>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reg_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#096D9C">

        </androidx.recyclerview.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>
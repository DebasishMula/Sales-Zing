<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="2dp"
    android:layout_marginHorizontal="6dp"

    android:background="#C6E1F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_marginVertical="5dp"
        >
        <TextView
            android:id="@+id/masterCard_itemNoPartNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2.8"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="Sales zing item no 1 [124578123654] ">

        </TextView>
        <TextView
            android:textColor="#C6B305"
            android:id="@+id/masterCard_tax"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight=".2"

            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:text="18%">

        </TextView>
    </LinearLayout>
    <!--    Value Row1-->

    <!--    Static Row2-->

    <!--    Value Row2-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginVertical="4dp"
        >
        <TextView
            android:textColor="@color/black"
            android:id="@+id/masterCard_cat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center"
            android:textSize="10dp"
            android:text="category">

        </TextView>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/masterCard_size"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:textSize="10dp"
            android:text="size">

        </TextView>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/masterCard_color"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="10dp"
            android:text="color"> </TextView>

        <TextView
            android:textColor="@color/black"
            android:id="@+id/masterCard_mrp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:textSize="10dp"
            android:text="MRP">
        </TextView>
        <TextView
            android:textColor="@color/black"
            android:id="@+id/masterCard_closingQty"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:gravity="center"
            android:textSize="10dp"
            android:text="closing qty.">

        </TextView>


    </LinearLayout>
</LinearLayout>
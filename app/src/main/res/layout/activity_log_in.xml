<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    android:background="#FFB3E5FC">
    <!--    1st Part-->
    <LinearLayout
        android:layout_marginTop="60dp"
        android:id="@+id/login1stPart"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"

        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:layout_weight="1.5"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            >
        </ImageView>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:text="Sales Zing"
            android:textColor="#FF0277BD"
            android:textSize="36dp"
            android:textStyle="bold"
            android:layout_weight="1"
            android:layout_gravity="center"

            >
        </TextView>
    </LinearLayout>

    <!--2nd part-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:orientation="vertical"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login1stPart">


        <EditText
            android:id="@+id/login_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="70dp"
            android:drawableLeft="@drawable/ic_person"
            android:paddingLeft="8dp"
            android:background="@drawable/edittext_shape1"
            android:maxLines="1"
            android:singleLine="true"
            android:inputType="textEmailAddress"
            android:drawablePadding="10dp"
            android:hint="User Id.">


        </EditText>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="40dp"
            android:paddingLeft="8dp"
            android:layout_height="50dp"
            android:drawableLeft="@drawable/ic_lock"
            android:drawablePadding="10dp"
            android:maxLines="1"
            android:background="@drawable/edittext_shape1"
            android:inputType="textPassword"
            android:singleLine="true"
            android:hint="Password">

        </EditText>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="45dp"
            android:background="@drawable/layout_back_effect"
            android:text="Log in"

            android:textColor="@color/white"
            android:textSize="18dp" />
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog.Alert">
    //whichever parent theme you want to use here
    //add these 2 to allow all APIs
    <item name="android:buttonBarPositiveButtonStyle">@style/PositiveAlertButtonStyle</item>
    <item name="android:buttonBarNegativeButtonStyle">

        @style/NegativeButtonStyle</item>
    </style>
    <style name="PositiveAlertButtonStyle" >
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:backgroundTint">#FF01579B</item>


    </style>
    <style name="NegativeButtonStyle" >
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:backgroundTint">#FF01579B</item>


    </style>
    <style name="MyDatePickerDialogTheme" parent="android:Theme.Material.Light.Dialog">
        <item name="colorAccent">#FF01579B</item>
        <item name="android:colorPrimary">#FF01579B</item>
        <item name="android:colorPrimaryDark">#FF01579B</item>
        <item name="android:colorAccent">#FF01579B</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyleOfDatePicker</item>
        <item name="android:buttonBarNegativeButtonStyle">

            @style/NegativeButtonStyleOfDatePicker</item>
    </style>
    <style name="NegativeButtonStyleOfDatePicker" >
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:backgroundTint">#FF01579B</item>


    </style>
    <style name="PositiveButtonStyleOfDatePicker" >
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:backgroundTint">#FF01579B</item>


    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">#E91E63</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#f1f1f1
        </item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">#42221f1f
        </item>
    </style>
</resources>